; X64-NEXT: add rsp,0x50
  terminate %b
}

; CHECK-LABEL: alloca5
alloca5() {
entry:
; X64: sub rsp,0x50
; COM: stack allocations > 16 are aligned up to 16
; X64-NEXT: lea rax,[rbp-0x50]
  %a = alloca 24
  %b = alloca 8
; X64-NEXT: add rsp,0x50
  terminate %a
}


